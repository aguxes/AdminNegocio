<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefWidth="1300.0" prefHeight="1000.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="View.AppController">

    <!-- ðŸ“Œ MenÃº lateral -->
    <VBox fx:id="menuLateral" prefWidth="180.0" spacing="15.0"
          styleClass="menu-lateral" alignment="TOP_CENTER">
        <padding>
            <Insets top="15" left="10" right="10" bottom="10"/>
        </padding>
    </VBox>

    <!-- ðŸ“Œ Contenido principal -->
    <VBox spacing="20.0" styleClass="contenido-principal" HBox.hgrow="ALWAYS">
        <padding>
            <Insets top="20" left="20" right="20" bottom="20"/>
        </padding>

        <TextArea fx:id="outputArea"
                  wrapText="true"
                  VBox.vgrow="ALWAYS"
                  styleClass="area-salida" />
    </VBox>
</HBox>
